<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"

    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="7dp"
        android:layout_height="wrap_content"
        android:minHeight="70dp">
        >

        <TextView
            android:id="@+id/tvTituloNota"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dp"
            android:layout_toLeftOf="@+id/imagenTipoAudio"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:foregroundGravity="left|center" />


        <ImageView
            android:id="@+id/imagenTipoAudio"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/imagenTipoNota"
            android:layout_height="wrap_content"
            android:background="@color/fondo"
            android:backgroundTint="@color/fondo" />

        <ImageView
            android:id="@+id/imagenTipoNota"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@color/fondo"
            android:backgroundTint="@color/fondo" />

    </RelativeLayout>

</android.support.v7.widget.CardView>